{
  "compilerOptions": {
    "target": "es2018",
    "strict": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "es2015",
    "lib": ["es2018", "dom"],
    "jsxFactory": "h",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist",
    "declaration": true
  },
  "exclude": ["node_modules", "dist"]
}
