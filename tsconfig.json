{
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist/types",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "h",
		"lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "dist",
		"strict": false, // enable the strict mode :)
		"target": "esnext",
		"removeComments": true,
		"baseUrl": ".",
		"paths": { "supertag": ["src/supertag.tsx"] }
	}
}
